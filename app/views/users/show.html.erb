<div class="card m-3">  
  <div class="card-body">
    <h1><%= @user.name %></h1>
    <p><%= mail_to(@user.email) %></p>
    <div>
      <% if current_user?(@user) %>
        <%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-warning px-4" %>
        <%= link_to "Delete Account", @user, method: :delete,
                    data: { confirm: "Are you shure?" },
                    class: "btn btn-danger px-4" %>
      <% end %>
    </div>
  </div>
</div>

<% if @registrations.present? %>
  <div class="card m-3">  
    <div class="card-body">  
      <h3>Registrations</h3>
      <% @registrations.each do |r| %> 
        <ul class="mt-2">
          <li class="mt-2">
            <p class="m-0"><%= link_to r.event.name, r.event %></p>     
            <small><%= time_ago_in_words(r.created_at) %> ago</small>
          </li>
        </ul>
      <% end %>  
    </div>
  </div>
<% end %>
